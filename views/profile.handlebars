<section class="h-100 gradient-custom-2">
  <div class="container">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-9 col-xl-7">
        <div class="card">
          <div class="rounded-top text-white d-flex flex-row" style="background-color: rgb(0, 0, 0); height:200px;">
            <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
              <img src="/images/default-profile.jfif" alt="Generic placeholder image"
                class="img-fluid img-thumbnail mt-4 mb-2" style="width: 150px; z-index: 1">
            </div>
            <div class="ms-3" style="margin-top: 130px;">
              <h5>{{userProfile.user_name}}</h5>
              <p>{{userProfile.city}}</p>
            </div>
          </div>
          <div class="p-1 text-black" style="background-color: #f8f9fa;">
            <div class="d-flex justify-content-end text-center py-1">
              <div class="px-3">
                <p class="mb-1 h5">{{countVisit}}</p>
                <p class="small text-muted mb-0">Profile Views</p>
              </div>
              <div class="px-3">
                <p class="mb-1 h5">{{userProfile.id}}</p>
                <p class="small text-muted mb-0">Member #</p>
              </div>
              <div class="px-3">
                <p class="mb-1 h5">4</p>
                <p class="small text-muted mb-0">Items</p>
              </div>
            </div>
          </div>
          <div class="card-body p-4 text-black">
            <div class="mb-2">
              <p class="lead fw-normal mb-1">Bio</p>
              <div class="p-4" style="background-color: #f8f9fa;">
                <p class="font-italic mb-1">{{userProfile.bio}}</p>
              </div>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-4">
              <p class="lead fw-normal mb-0">Collection</p>
            </div>
            <div class="row g-2">
              <div class="col mb-2">
                <img src="/images/1-2.png" alt="image 1" class="w-100 rounded-3">
              </div>
              <div class="col mb-2">
                <img src="/images/3-2.png" alt="image 1" class="w-100 rounded-3">
              </div>
            </div>
            <div class="row g-2">
              <div class="col">
                <img src="/images/3-4.png" alt="image 1" class="w-100 rounded-3">
              </div>
              <div class="col">
                <img src="/images/4-1.png" alt="image 1" class="w-100 rounded-3">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>