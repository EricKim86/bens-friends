<section style="background-color: #f4f5f7;">
  <div class="container py-2">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col col-lg-6 mb-lg-0">
        <div class="card mb-2" style="border-radius: .5rem;">
          <div class="row g-0">
            <div class="col-md-4 gradient-custom text-center text-white"
              style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
              <img src="{{profile_image}}"
                alt="profile image" class="img-fluid my-5" style="width: 120px;" />
              <h4>{{user_name}}</h4>
              <a class="link" href="/user/{{id}}">
                <center>
                  <h6>View Profile</h6>
                </center>
              </a>
            </div>
            <div class="col-md-8">
              <div class="card-body p-4">
                <h6>Information</h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-8 mb-3">
                    <h6>Email:</h6>
                    <p class="text-muted">{{email}}</p>
                  </div>
                </div>
                <h6>Contributions and Statistics</h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6>Member Rank:</h6>
                    <p class="text-muted">{{id}}</p>
                  </div>         
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>