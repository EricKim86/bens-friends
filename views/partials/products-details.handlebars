<section>
  <div class="container">
    <div class="row justify-content-center mb-3">
      <div class="col-md-12 col-xl-10">
        <div class="card shadow-0 border rounded-3">
          <div class="card-body">
            <div class="row">
              <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                <div class="bg-image hover-zoom ripple rounded ripple-surface">
                  <img src="/images/{{filename}}" class="card-img-top" alt="product image">
                  <a href="/product/{{id}}">
                    <div class="hover-overlay">
                      <div class="mask" style="background-color: rgb(255, 255, 255);"></div>
                    </div>
                  </a>
                </div>
              </div>
              <div class="col-md-6 col-lg-6 col-xl-6" id="{{categories_id}}">
                <h5>{{prod_name}}</h5>
                <div class="d-flex flex-row">
                  <div class="text-danger mb-1 me-2">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                  </div>
                </div>
                <p class=" mb-4 mb-md-0">
                  {{prod_description}}
                </p>
              </div>
              <div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
                <div class="d-flex flex-row align-items-center mb-1">
                  <h4 class="mb-1 me-1">${{price}}</h4>
                </div>
                <h6 class="text-success">Free shipping</h6>
                <div class="d-flex flex-column mt-4">
                  <center><a href="/product/{{id}}"><button class="full btn btn-primary btn-rounded">Details</button></a></center>
                  <br>
                    <center><button type="submit" class="full btn btn-primary btn-rounded" data-id="{{id}}" data-user-id="{{user_id}}">Add to Cart</button></center>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</section>

