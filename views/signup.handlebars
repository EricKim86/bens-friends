<div class="main">
  <form class="form signup-form">
    <h2 class="page-title">Signup:</h2>

    <!-- Username input -->
    <div class="form-outline mb-2">
      <label class="form-label" for="username-signup">Username:</label>
      <input type="text" id="username-signup" class="form-control" />
    </div>

    <!-- Email input -->
    <div class="form-outline mb-2">
      <label class="form-label" for="email-signup">Email:</label>
      <input type="text" id="email-signup" class="form-control" />
    </div>

    <!-- Password input -->
    <div class="form-outline mb-2">
      <label class="form-label" for="password-signup">Password:</label>
      <input type="password" id="password-signup" class="form-control" />
    </div>

    <!-- City input -->
    <div class="form-outline mb-2">
      <label class="form-label" for="city-signup">City:</label>
      <input type="text" id="city-signup" class="form-control" />
    </div>

    {{!-- bio input --}}
    <div class="form-group mb-2">
      <label class="form-label" for="form-label">Tell us about yourself:</label>
      <textarea type="text" id="bio-signup" class="form-control" rows="3"></textarea>
    </div>

    {{!-- upload image --}}
    <div class="form-group mb-2">
      <label class="form-label" htmlfor="fileInput">Upload Profile Image:</label>
    </div>
    <center>
      <button id="upload_widget" class="cloudinary-button">
        Upload files
      </button>
      <br>
      <img class="img-fluid img-thumbnail mt-4 mb-2" style="width: 350px;" id="uploadedimage" src="">
      </img>
    </center>

    <!-- 2 column grid layout for inline styling -->
    <div class="row mb-4">
      <div class="col d-flex justify-content-center">
      </div>

      <!-- Submit button -->
      <button type="submit" class="btn btn-primary btn-block mb-4">Sign up</button>
  </form>
</div>

<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>
<script src="./js/signup.js"></script>